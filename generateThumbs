#!/bin/bash

echo "  Generating Thumbnails"

frameNum="$1"
filter1="$2"
filter2="$3"

for i in *.mov; do
    if [[ "$i" == *"$filter1"* ]] && [[ "$i" == *"$filter2"* ]] && [[ "$i" != "*.mov" ]]; then
        pngthumb=${i/mov}png
        jpgthumb=${i/mov}jpg
        ffmpeg -loglevel quiet -y -i "$i" -q:v 1 -vf "select=eq(n\,$frameNum)" -vframes 1 "$pngthumb"
        magick "$pngthumb" "$jpgthumb"
        rm "$pngthumb"
    fi
done